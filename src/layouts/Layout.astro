---
import "@fontsource-variable/plus-jakarta-sans";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Various links from me" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="mx-auto flex min-h-screen flex-col gap-9 bg-neutral-950 py-8 text-sm text-neutral-400 sm:px-6 md:gap-20 md:px-8 md:py-16 lg:px-16 xl:px-48 2xl:px-96"
  >
    <slot />
  </body>
</html>
