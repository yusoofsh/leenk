---
import presentation from "../contents/presentation";
import Link from "./shared/Link.astro";

const { socials } = presentation;
---

<ul class="flex flex-row gap-2">
  {
    socials.map(
      (social, index): JSX.Element => (
        <>
          <li>
            <Link href={social.link} label={social.label} />
          </li>
          {socials.length - 1 !== index && <li>/</li>}
        </>
      ),
    )
  }
</ul>
